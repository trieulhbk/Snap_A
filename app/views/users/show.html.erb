<h2> Show boxes | <%=@user.name %> </h2>
<% if current_user?(@user) %>
<h3> Boxes of signed user </h3>
<div id="box_frame">
  <h5><%= render @boxes %></h5>
</div>
<%= render 'new_box_form'%>

<% else %>
<h3> Boxes of the other user </h3>

<%= render 'follow_user_form' %>
<%= link_to "#{@user.followers.count} followers", followers_user_path(@user) %>
<%= link_to "#{@user.following_users.count} following", following_user_path(@user) %>
<hr/>
<%= render @boxes %>

<% end %>
